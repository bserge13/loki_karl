<h1> Update <%= @cat.name %></h1>

<p><%= form_with url: cat_path(@cat.id), method: :patch, local: true do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, value: "#{@cat.name}" %>

    <%= f.label :age %>
    <%= f.number_field :age, value: "#{@cat.age}" %>

    <%= f.label :color %>
    <%= f.text_field :color, value: "#{@cat.color}" %>

    <%= f.submit "Update" %>
<% end %>